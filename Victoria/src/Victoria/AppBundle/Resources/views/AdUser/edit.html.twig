{% extends '::basemenu.html.twig' %}
{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block header -%}
    Editar un usuario
    <small>
        <i class="ace-icon fa fa-angle-double-right"></i>
        Editar la informaci√≥n de un usuario
    </small>
{% endblock %} 
{% block menu %}
    {{ menu|raw }}
{% endblock %} 
{% block content -%}
{% for type, flash_messages in app.session.flashBag.all %}
    {% for flash_message in flash_messages %}
        <div class="alert {{ type }}">
            {{ flash_message }}
        </div>
    {% endfor %}
{% endfor %}

    {{ form_start(edit_form) }}
        {% if is_granted('ROLE_ADMIN') %}
            {{ form_row(edit_form.codDepartamento) }}
            <div class="form-group">
                <label class="col-sm-2 control-label">Municipio</label>
                <div class="col-sm-10">
                    <select id="codmunicipio" class="form-control" name="codmunicipio">
                        <option value="0">-- Selecionar --</option>
                    </select>
                </div>
            </div>             
        {% endif %}
        {{ form_row(edit_form.idEstructura) }}
        {{ form_row(edit_form.idCampana) }}
        <div class="form-group">
                <label class="col-sm-2 control-label">Distrito</label>
                <div class="col-sm-10">
                    <select id="iddistrito" class="form-control" name="iddistrito">
                        <option value="0">-- Selecionar --</option>
                    </select>
                </div>
        </div>
        {{ form_row(edit_form.nombreUsuario) }}
        {{ form_row(edit_form.username) }}
        {{ form_row(edit_form.password) }}
        {{ form_row(edit_form.email) }}
        {% if is_granted('ROLE_ADMIN') %}
            {{ form_row(edit_form.user_roles) }}
            {{ form_row(edit_form.acceso) }}
        {% endif %}
        {{ form_row(edit_form.submit) }}
        {{ form_widget(edit_form._token) }}
    {{ form_end(edit_form, {'render_rest': false})}}

        <ul class="record_actions">
    <li>
        <a href="{{ path('aduser') }}">
            Regresar al listado
        </a>
    </li>
</ul>
{% endblock %}
