{% extends '::basemenu.html.twig' %}

{% block menu %}
    {{ menu|raw }}
{% endblock %}
{% block header %}
<!-- Content Header (Page header) -->
    <section style="padding-bottom: 20px;"class="content-header">
      <h1>
        Información del presupuesto
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-money"></i> Presupuesto</a></li>
        <li class="active">Ver información del presupuesto</li>
      </ol>
    </section>
{% endblock %}
{% block content -%}
    <table class="table table-striped table-bordered table-responsive">
        <tbody>
            <tr>
                <th>Id Presupuesto</th>
                <td>{{ entity.idpresupuesto }}</td>
            </tr>
            <tr>
                <th>Tipo Egreso</th>
                <td>{{ entity.tipoegreso }}</td>
            </tr>
            <tr>
                <th>Actividad Egreso</th>
                <td>{{ entity.idactividadegreso }}</td>
            </tr>
            <tr>
                <th>Fuente Egreso</th>
                <td>{{ entity.fuenteegreso }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Preparado Por</th>
                <td>{{ entity.preparadopor }}</td>
            </tr>
            <tr>
                <th>Aprobado Por</th>
                <td>{{ entity.aprobadopor }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
            <tr>
                <th>Total Presupuesto</th>
                <td>{{ entity.total }}</td>
            </tr>
            <tr>
                <td style="text-align: center" colspan="2">
                    Detalle de las actividades 
                </td>
            </tr>
            <tr>
                <td style="text-align: center">Nombre Actividad</td>
                <td style="text-align: center">Costos</td>
            </tr>    
        </tbody>
    </table>
        
    <ul style="list-style: none; margin-left: 0; text-align: right ">
    {% if is_granted('ROLE_ADMIN') %}    
    <li style="float: right; margin: 0px 0px 5px 10px;">
        <a style="display: block; " class="btn btn-md btn-success" href="{{ path('datospresupuestos_edit', { 'id': entity.idpresupuesto }) }}">
            <i class="ace-icon fa fa-edit align-top bigger-120"></i> Editar 
        </a>
    </li>
    {% endif %}
    <li style="float: right;">
        <a style="display: block;" class="btn btn-md btn-success" href="{{ path('datospresupuestos') }}">
            <i class="ace-icon fa fa-fa-arrow-left align-top bigger-120"></i> Regresar 
        </a>
    </li>
    </ul>            
{% endblock %}
