{% extends '::basemenu.html.twig' %}

{% block menu %}
    {{ menu|raw }}
{% endblock %}
{% block header %}
<!-- Content Header (Page header) -->
    <section style="padding-bottom: 20px;"class="content-header">
      <h1>
        Información campaña política
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-flag"></i> Campañas</a></li>
        <li class="active">Ver información de campaña política</li>
      </ol>
    </section>
{% endblock %}
{% block content -%}
    <table class="table table-striped table-bordered table-responsive">
        <tbody>
            <tr>
                <th>Id de Campaña</th>
                <td>{{ entity.idCampana }}</td>
            </tr>
            <tr>
                <th>Nombre de campaña</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Candidato</th>
                <td>{{ entity.candidato }}</td>
            </tr>
        </tbody>
    </table>
    <ul style="list-style: none; margin-left: 0; text-align: right ">
    <li style="float: left; padding: 5px;">
        <a style="display: block; " class="btn btn-md btn-success" href="{{ path('datoscampanaspoliticas_edit', { 'id': entity.idCampana }) }}">
            <i class="ace-icon fa fa-edit align-top bigger-120"></i> Editar 
        </a>
    </li>    
    <li style="float: left; padding: 5px;">
        <a style="display: block;" class="btn btn-md btn-success" href="{{ path('datoscampanaspoliticas') }}">
            <i class="ace-icon fa fa-fa-arrow-left align-top bigger-120"></i> Regresar 
        </a>
    </li>
    </ul>
        
{% endblock %}
